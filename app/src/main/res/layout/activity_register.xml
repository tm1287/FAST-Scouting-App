<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.maraligat.fastscoutingapp.RegisterActivity">

    <ImageView
        android:id="@+id/r_ImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/r_UsernameEt"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/r_PasswordEt"
        android:layout_alignStart="@+id/r_PasswordEt"
        android:layout_below="@+id/r_TitleTv"
        android:layout_marginTop="42dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/r_PasswordEt"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/r_UsernameEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/r_TitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_ImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="FAST - FRC Scouter"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/r_PasswordEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/r_SubmitTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/r_RegisterTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Already Have an Account? Sign In"
        android:textSize="18sp" />
</RelativeLayout>
